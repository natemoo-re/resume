{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",
        "allowJs": true,
        "module": "es2015",
        "strict": true,
        "noEmitOnError": false,
        "sourceMap": false,
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist/src"
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/types"
    ]
}